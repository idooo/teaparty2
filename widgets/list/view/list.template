<div class="widget-list">

    <h3 ng-show="!!widget.caption">{{widget.caption}}</h3>

    <ul class="widget-list-container">

        <li class="widget-list-item" ng-repeat="item in widget.data">

            <span class="widget-list-item__value">{{item.value}}</span>
            <span class="widget-list-item__label">{{item.label}}</span>

        </li>

    </ul>

</div>